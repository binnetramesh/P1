@model IEnumerable<Inventory>
@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>

<a asp-controller="Home" asp-action="CreateInventory">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Start Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(o => item.Name)
            </td>
            <td>
                @Html.DisplayFor(o => item.Country)
            </td>
            <td>
                @Html.DisplayFor(o => item.StartDate)
            </td>
        </tr>
        }
    </tbody>
</table>